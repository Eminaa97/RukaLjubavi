<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".DonatorLicniPodaciAzurirajActivity"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/btnBack4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="48dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:layout_constraintBottom_toTopOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.131"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.247"
            app:srcCompat="@drawable/arrow" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="48dp"
            android:layout_marginRight="48dp"
            android:fontFamily="@font/regular"
            android:text="Donator"
            android:textColor="@color/gray"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.863"
            app:layout_constraintStart_toEndOf="@+id/btnBack"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txtRegIme"
            android:layout_width="310dp"
            android:layout_height="50sp"
            android:layout_marginTop="15dp"
            android:background="@drawable/input_field"
            android:ems="10"
            android:fontFamily="@font/regular"
            android:hint="Ime"
            android:inputType="textPersonName"
            android:textColorHint="@color/gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <EditText
            android:id="@+id/txtRegPrezime"
            android:layout_width="310dp"
            android:layout_height="50sp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:fontFamily="@font/regular"
            android:hint="Prezime"
            android:background="@drawable/input_field"
            android:textColorHint="@color/gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtRegIme" />

        <EditText
            android:id="@+id/txtRegAdresa"
            android:layout_width="310dp"
            android:layout_height="50sp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="Adresa"
            android:background="@drawable/input_field"
            android:textColorHint="@color/gray"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtRegPrezime" />

        <EditText
            android:id="@+id/txtRegTelefon"
            android:layout_width="310dp"
            android:layout_height="50sp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="Telefon"
            android:background="@drawable/input_field"
            android:textColorHint="@color/gray"
            android:inputType="phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtRegAdresa" />

        <EditText
            android:id="@+id/txtRegEmail"
            android:layout_width="310dp"
            android:layout_height="50sp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="Email"
            android:background="@drawable/input_field"
            android:textColorHint="@color/gray"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtRegTelefon" />

        <Spinner
            android:id="@+id/spnDonMjestoPrebivalista"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/spiner_field"
            android:fontFamily="@font/regular"
            android:spinnerMode="dialog"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtRegEmail" />

        <Button
            android:id="@+id/btnDonatorAzuriraj"
            android:layout_width="162dp"
            android:layout_height="53dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/button"
            android:fontFamily="@font/regular"
            android:text="Ažuriraj"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spnDonMjestoPrebivalista" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/regular"
            android:text="Lični podaci"
            android:textColor="@color/gray"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.195"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnBack4" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:rotation="270"
            app:layout_constraintBottom_toBottomOf="@+id/spnDonMjestoPrebivalista"
            app:layout_constraintEnd_toEndOf="@+id/spnDonMjestoPrebivalista"
            app:layout_constraintHorizontal_bias="0.91"
            app:layout_constraintStart_toStartOf="@+id/spnDonMjestoPrebivalista"
            app:layout_constraintTop_toTopOf="@+id/spnDonMjestoPrebivalista"
            app:layout_constraintVertical_bias="0.566"
            app:srcCompat="@drawable/arrow" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>